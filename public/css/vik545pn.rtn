}

.chat-fade{opacity:0;}
.chat-fade.in{opacity:1;}

textarea.chat-window-text-box {
    -moz-border-bottom-colors: none;
    -moz-border-left-colors: none;
    -moz-border-right-colors: none;
    -moz-border-top-colors: none;
    border-color: #66cccc;
    border-image: none;
    border-radius: 0;
    border-style: solid;
    border-width: 1px;
    box-sizing: border-box;
    font-size: 14px;
    line-height: 1.2em;
    margin: 0px;
    overflow: hidden;
    padding: 3px;
    resize: none;
    width: 100%;
}


