.chat-window {
    background-color: #f3f4f4;
    border: 1px solid rgba(0, 0, 0, 0.3);
    border-width: 1px 1px 0px 1px;
    bottom: 0;
    font-family: 'Open Sans', sans-serif;
    font-size: 15px;
    line-height: 24.4px;
    position: fixed;
    width: 300px;
    z-index: 10000;
}

.chat-window-title {
    background: none repeat scroll 0 0 #008783;
    color: #ffffff;
    cursor: pointer;
    overflow: hidden;
    padding: 6px;
}

.chat-window-title .close {
    background-image: url("/public/img/clear.png");
    float: right;
    height: 16px;
    width: 16px;
    opacity: 1;
}

.chat-window-title .close:hover {
    opacity: 0.5;
}

.chat-window-title .text {
    margin-top: 1px;
}

.chat-window-content { /*min-height: 100px;*/
}

.chat-window-content input[type=text] {
    -moz-box-sizing: border-box; /* Firefox, other Gecko */
    -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
    border-radius: 0;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
    box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset;
    box-sizing: border-box; /* Opera/IE 8+ */
    height: auto;
    margin: 0;
    margin: 0;
    transition: border 0.2s linear 0s, box-shadow 0.2s linear 0s;
    transition: border 0.2s linear 0s, box-shadow 0.2s linear 0s;
}

.chat-window-inner-content {
    max-height: 300px;
    overflow-y: auto;
}

.message-board {
    -moz-box-sizing: border-box; /* Firefox, other Gecko */
    -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
    box-sizing: border-box; /* Opera/IE 8+ */
    position: relative;
    overflow: hidden;
}

.message-board.pm-window {
    margin-bottom: 3px;
}

.message-board .messages-wrapper {
    -moz-box-sizing: border-box; /* Firefox, other Gecko */
    -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
    box-sizing: border-box; /* Opera/IE 8+ */
    overflow-x: hidden;
    overflow-y: auto;
    padding: 2px 0;
}

.message-board .messages-wrapper .profile-picture {
    height: 22px;
    width: 22px;
}

.message-board .chat-window-text-box-wrapper {
    -moz-box-sizing: border-box; /* Firefox, other Gecko */
    -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
    box-sizing: border-box; /* Opera/IE 8+ */
    padding: 0px;
}

.message-board .chat-window-text-box-wrapper .chat-window-text-box {
    -moz-box-sizing: border-box; /* Firefox, other Gecko */
    -webkit-box-sizing: border-box; /* Safari/Chrome, other WebKit */
    box-sizing: border-box; /* Opera/IE 8+ */
    outline: 0;
}

.chat-message {
    margin: 0 5px;
    overflow: hidden;
    padding: 2px 0;
}

.chat-message:last-child {
    border-bottom: none;
}

.chat-message .chat-gravatar-wrapper {
    float: left;
}

.chat-message .chat-text-wrapper {
    line-height: 1.2em;
    margin-left: 30px;
}

.chat-message p {
